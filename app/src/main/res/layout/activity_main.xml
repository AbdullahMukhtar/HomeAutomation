<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdullah.homeautomation.MainActivity"
    android:background="@color/lightgray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="@drawable/ac"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Split AC"
                android:textColor="@color/colourBlack"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="@drawable/fridge"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lights"
                android:textColor="@color/colourBlack"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <Button
            android:id="@+id/switch3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/light"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fridge"
                android:textColor="@color/colourBlack"
                android:textStyle="bold"
                android:textSize="18sp"/>
       <Button
            android:id="@+id/switch4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/tv"
           android:layout_marginTop="25dp"
           android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Television"
                android:textColor="@color/colourBlack"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="25dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="Paired Devices"
    android:textAlignment="center"
    android:textStyle="bold"
    android:background="@color/blue"
    android:textSize="20dp"
    android:textColor="@color/white"/>
        <ListView
            android:id="@+id/BTList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
